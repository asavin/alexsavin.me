mixin tagPostList(posts)
  each post in posts
    div.post-container.tag-index
      div.date-bubble
        | #{post.postdate}
      a.header-link(href=post.url)
        h4.title!= post.title
      div.post-preview!= post.description
      div.read-more
        a(href=post.url) Read article â‡¨
      if post.tags
        div.tags
          ul
            each tag in post.tags
              li
                a(href="/eng/tags/"+tag.link)!= tag.label

